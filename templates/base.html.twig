<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Site Web{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet"    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
                                      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
                                      crossorigin="anonymous">            
            <link rel='stylesheet'    href='https://fonts.googleapis.com/css?family=Ubuntu'> 
            <link rel="shortcut icon" href="data:image/x-icon"                type="image/x-icon">
            <link rel="shortcut icon" href="{{asset('assets/img/logo.png')}}" type="image/png">
            <link rel="stylesheet"    href="{{asset('assets/css/customcss.css' )}}">
        {% endblock %}
    </head>
    <body class="bg-img">
        <header class="row mx-0">
            <div class="col-4 px-0 h-100">
                <a href="{{path('admin')}}"><img class="mh-100 mw-100" src="{{asset('assets/img/gnosysLogo.png')}}" alt="logo"></a>
            </div>
            <div class="col-8 d-flex justify-content-end align-items-center">
                <a href="{{path('home')}}" class="pe-2 h5 text-white text-decoration-none">Accueil</a>
            </div>
        </header>
        {% block content %}

        {% endblock %}

        <footer class="d-flex justify-content-center align-items-center"> 
            <div class="footer-icon"><a href="https://fr-fr.facebook.com"><img class="icon-32px" src="{{asset('assets/icon/facebook.png' )}}"/></a></div>
            <div class="footer-icon"><a href="https://instagram.com">     <img class="icon-32px" src="{{asset('assets/icon/instagram.png')}}"/></a></div>
            <div class="footer-icon"><a href="https://fr.linkedin.com">   <img class="icon-32px" src="{{asset('assets/icon/linkedin.png' )}}"/></a></div>
            <div class="footer-icon"><a href="https://github.com">        <img class="icon-32px" src="{{asset('assets/icon/github.png'   )}}"/></a></div>
            <div class="footer-icon"><a href="https://ecologie.fr">       <img class="icon-32px" src="{{asset('assets/icon/eco.png'      )}}"/></a></div>
            <div class="footer-icon"><a href="https://gouv.fr">           <img class="icon-32px" src="{{asset('assets/icon/medal.png'    )}}"/></a></div>
            <div class="footer-icon"><a href="https://rgpd.eu">           <img class="icon-32px" src="{{asset('assets/icon/rgpd.png'     )}}"/></a></div>                             
        </footer>
                
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script src="https://kit.fontawesome.com/01a63ec227.js" crossorigin="anonymous"></script>            
            <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
